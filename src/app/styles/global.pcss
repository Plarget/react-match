body {
  font-family: 'Inter', sans-serif;
  font-weight: 500;
  overflow-x: hidden;
  background-color: var(--color-main-darker);
  color: var(--color-main-2);
}

html, body, #root {
  height: 100%;
}

#root {
  display: flex;
  flex-direction: column;
}

img {
  max-width: 100%;
  height: auto;
}

hr {
  border: initial;
}

input:focus {
  outline: none;
}